{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "strict": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "composite": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "plugins": [
      {
        "name": "typescript-strict-plugin",
        "path": [
          "src/renderer/**/*.ts"
        ]
      }
    ]
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/preload/*.d.ts",
    "lib/**/*.ts",
  ]
}